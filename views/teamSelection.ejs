                    </button>
    
                    <!-- Tottenham Hotspur -->
                    <button type="button" class="team-card" data-value="19">
                        <img src="/images/tottenham-hotspur.png" alt="Tottenham Hotspur">
                        <p>Tottenham Hotspur</p>
                    </button>
    
                    <!-- West Ham United -->
                    <button type="button" class="team-card" data-value="42">
                        <img src="/images/west-ham-united.png" alt="West Ham United">
                        <p>West Ham United</p>
                    </button>
    
                    <!-- Wolverhampton Wanderers -->
                    <button type="button" class="team-card" data-value="44">
                        <img src="/images/wolverhampton-wanderers.png" alt="Wolverhampton Wanderers">
                        <p>Wolverhampton Wanderers</p>
                    </button>
                </div>
                
                <input type="hidden" name="teamID" id="selected-team">
                <button type="submit" class="confirm-button" disabled>Confirm Selection</button>
            </form>
        </div>
    </div>
    

<script>
    document.querySelectorAll('.team-card').forEach(card => {
        card.addEventListener('click', function() {
            document.querySelectorAll('.team-card').forEach(btn => btn.classList.remove('selected'));
            this.classList.add('selected');
            document.getElementById('selected-team').value = this.getAttribute('data-value');
            document.querySelector('.confirm-button').disabled = false;
        });
    });
</script>

</body>
</html>
